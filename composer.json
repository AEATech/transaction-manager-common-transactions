{
    "name": "aeatech/transaction-manager-common-transactions",
    "description": "Contains reusable, dialect-independent SQL transaction implementations, identifier quoting abstraction, and shared builders used across MySQL, PostgreSQL, and future AEATech Transaction Manager adapters",
    "keywords": ["aeatech", "transaction-manager", "transaction", "database", "MySQL", "PostgreSQL"],
    "license": "MIT",
    "type": "library",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "aeatech/transaction-manager-core": "^1.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6.10",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "AEATech\\TransactionManager\\Transaction\\": "src/AEATech/TransactionManager/Transaction"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AEATech\\Test\\TransactionManager\\Transaction\\": "tests/AEATech/Test/TransactionManager/Transaction"
        }
    },
    "archive": {
        "exclude": [
            "/docker",
            "/tests",
            "/phpunit.xml"
        ]
    }
}
